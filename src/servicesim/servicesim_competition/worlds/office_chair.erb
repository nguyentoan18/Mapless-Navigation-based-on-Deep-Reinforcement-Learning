<%
  # Template for an office chair link
  #
  # Required variables
  # * $name (string) Link name
  # * $pose (number[6]) link pose
  # * $collisions (boolean) False to remove collisions
%>

<link name="<%= $name %>">
  <pose>
    <%= $pose[0] %>
    <%= $pose[1] %>
    <%= $pose[2] %>
    <%= $pose[3] %>
    <%= $pose[4] %>
    <%= $pose[5] %>
  </pose>

  <% if $collisions %>

  <collision name="collision">
    <pose>0.001581 0.000308 0.569888 0 0 0</pose>
    <geometry>
      <cylinder>
        <radius>0.43</radius>
        <length>1.14</length>
      </cylinder>
    </geometry>
  </collision>

  <% end %>

  <visual name="visual">
    <geometry>
      <mesh>
        <uri>model://office_chair/meshes/office_chair.dae</uri>
        <scale>1.4 1.4 1.4</scale>
      </mesh>
    </geometry>
  </visual>

</link>
